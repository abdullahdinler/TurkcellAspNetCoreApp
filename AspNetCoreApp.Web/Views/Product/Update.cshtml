@model ProductViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Updated Page</h2>

<form class="form-group" asp-controller="Product" asp-action="Update" method="post">
    
   <input type="hidden" asp-for="Id"/>
    <label>Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Price</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Stock</label>
    <input type="text" asp-for="Stock" class="form-control" />
    <br />
    <button class="btn btn-outline-success" type="submit">Updated</button>
</form>

