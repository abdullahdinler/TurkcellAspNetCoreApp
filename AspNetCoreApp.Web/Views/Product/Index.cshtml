@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product</h1>
<div class="text-right">
    <a class="btn btn-outline-info" asp-controller="Product" asp-action="Index">New Product</a>
</div>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>PRICE</th>
        <th>STOCK</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td class="text-right">
                <a class="btn btn-outline-danger text-right" asp-controller="Product" asp-action="Index">Remove</a>
                <a class="btn btn-outline-success text-right" asp-controller="Product" asp-action="Index">Edit</a>
            </td>
        </tr>
    }

</table>

